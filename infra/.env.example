# Patent Discovery System - Environment Variables
# Copy this file to .env and update with your values

# PostgreSQL Configuration
POSTGRES_DB=patents
POSTGRES_USER=patent_user
POSTGRES_PASSWORD=patent_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Neo4j Configuration
NEO4J_AUTH=neo4j/patent_password
NEO4J_HOST=localhost
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# Neo4j Memory Settings (adjust based on your system)
NEO4J_dbms_memory_pagecache_size=1G
NEO4J_dbms_memory_heap_initial__size=1G
NEO4J_dbms_memory_heap_max__size=2G

# Database URLs (for application use)
DATABASE_URL=postgresql://patent_user:patent_password@localhost:5432/patents
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=patent_password
